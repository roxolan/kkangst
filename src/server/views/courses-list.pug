extends layout

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}

  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each course in courses
          .col-xs-12.list-group-item
            h4
              a(href="/course")= course.name
              small &nbsp;
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star
                span.glyphicon.glyphicon-star-empty
                span.glyphicon.glyphicon-star-empty
              span.badge.pull-right.badge-default= course.distance
            p.address= course.address
            p
              each group in course.groups
                span.label.label-warning= group
                | &nbsp;
    .col-xs-12.col-sm-4
      p.lead= sidebar
